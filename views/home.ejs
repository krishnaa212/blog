<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Home Page</title>
</head>
<body>
  <%- include('./partials/nav') %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 text-center mt-3 mx-3">
      <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card col" style="width: 18rem;">
            <img src=<%=blog.coverImgUrl%> class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>  
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  
  <%- include('./partials/script') %>

</body>
</html>